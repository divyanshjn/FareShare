<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="fareshare.maniacers.fareshare.SeatShare">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/seatshare_text_pnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter PNR Number : "/>

    <EditText
        android:id="@+id/seatshare_edit_pnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minHeight="0dp"
        android:minWidth="100dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/seatshare_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expected Price : "/>

        <EditText
            android:id="@+id/seatshare_edit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:minHeight="0dp"
            android:minWidth="100dp" />
    </RelativeLayout> <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/seatshare_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "/>

        <EditText
            android:id="@+id/seatshare_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:minHeight="0dp"
            android:minWidth="100dp" />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/seatshare_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:text="Submit" /> </RelativeLayout>
    <TextView
        android:id="@+id/seatshare_text_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        /></LinearLayout>
</RelativeLayout>
