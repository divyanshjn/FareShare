<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/colorPrimary"
    tools:context="fareshare.maniacers.fareshare.OptionAdapterActivity"
    tools:showIn="@layout/recieve_adapter_layout">


    <TextView
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/RAA_sender_name"
        android:text="Name Of Sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:id="@+id/RAA_sender_email"
        android:text="Sender Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
